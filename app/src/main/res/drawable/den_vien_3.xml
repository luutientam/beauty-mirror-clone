<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Viền ngoài không bo góc -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="30dp"
                android:color="#6699ff"/> <!-- Viền mờ trắng -->
        </shape>
    </item>

    <!-- Viền bo góc phía trong -->
    <item android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="30dp"
                android:color="#6699ff"/> <!-- Viền mờ trắng đậm hơn -->
            <corners android:radius="50dp"/> <!-- Bo góc phía trong -->
        </shape>
    </item>

</layer-list>
